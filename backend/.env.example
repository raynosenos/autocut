# AI Trading Bot Environment Variables
# Copy this file to .env and fill in your credentials

# MetaTrader 5 Configuration
MT5_LOGIN=your_mt5_login
MT5_PASSWORD=your_mt5_password
MT5_SERVER=JustMarkets-Demo2

# AI Provider Configuration
# Get your key from https://console.groq.com (comma-separated for multiple keys)
GROQ_API_KEY=gsk_your_key_1,gsk_your_key_2,gsk_your_key_3

# Deepseek (Backup - Optional)
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Trading Configuration
SYMBOL=XAUUSD.m
LOT_SIZE=0.03
MAX_POSITIONS=3
RISK_PERCENT=20.0

# Advanced Features
AUTO_BEP_ENABLED=true
AUTO_BEP_PIPS=20.0
MIN_RR_RATIO=1.1
GUARDIAN_DELAY=15

# Session Filter
SESSION_FILTER_ENABLED=false
ALLOWED_SESSIONS=london,asia,sydney,newyork

# Trailing Stop
TRAILING_STOP_ENABLED=true
TRAILING_STOP_PIPS=20.0

# Server Configuration
API_PORT=8000
FRONTEND_PORT=5173

# Discord Notifications (optional)
DISCORD_WEBHOOK_URL=your_discord_webhook_url
